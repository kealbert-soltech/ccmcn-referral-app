@model ReferralApp.Models.Referral

@{
    ViewData["Title"] = "Update Status";
}

<h1>Update Status</h1>

<h4>Referral</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ExistingReferralId" />
			<div class="form-group">
				<span>Please select a status for the referral pertaining to @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName) being referred to the program of @Html.DisplayFor(model => model.Program.Name) . </span>
			</div>
			<div class="form-group">
				<label asp-for="Status" class="control-label"></label>
				<select asp-for="Status" class="form-control" asp-items="ViewBag.Statuses"></select>
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
