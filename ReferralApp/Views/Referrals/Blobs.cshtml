@model IEnumerable<ReferralApp.Models.Blob>

@{
    ViewData["Title"] = "Blob List";
}

<h1>Blob List</h1>
@*<p>
    <a asp-action="Blobs">Refresh</a>
</p>*@
<div class="row">
    <div >
        <form asp-action="RefreshBlobs">
            <input type="submit" value="Update" class="btn btn-primary" />
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ReferralId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Uri)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReferralId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Uri)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

